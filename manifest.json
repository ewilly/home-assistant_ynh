{
  "name": "Home Assistant",
  "id": "homeassistant",
  "packaging_format": 1,
   "description": {
    "en": "Home automation platform",
    "fr": "Plateforme domotique"
  },
  "version": "1.0.0",
  "url": "https://github.com/home-assistant/home-assistant",
  "license": "Apache",
  "maintainer": {
    "name": "ewilly",
    "email": "ewilly@ewilly.fr"
  },
  "requirements": {
        "yunohost": ">= 2.7.2"
  },
  "multi_instance": false,
  "services": [
      "nginx",
      "homeassistant"
  ],
  "arguments": {
    "install": [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
          "en": "Choose a domain for Home Assistant"
        },
        "example": "domain.org"
      },
      {
        "name": "password",
        "type": "password",
        "ask": {
          "en": "Choose a password for Home Assistant"
        },
        "example": "super_secret_password"
      }
      {
        "name": "password_configurator",
        "type": "password",
        "ask": {
          "en": "Choose a password for Home Assistant Configurator (user will be admin)"
        },
        "example": "super_secret_password"
      }
    ]
  }
}
